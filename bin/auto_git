
#!/bin/bash

personal_access_token="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"
username="wraient"
# Define the list of repository directories
repos=(
    "/home/wraient/.hidden/hyprconf/"
    "/home/wraient/.local/auto_git"
    "/home/wraient/.hidden/auto_commit/"
    # Add more repositories as needed
)

# Loop through each repository
for repo in "${repos[@]}"
do

    # Extract the repository name from the directory path
    repository=$(basename "$repo")

    # Navigate to the repository directory
    cd "$repo" || exit

    # Check if there are any changes
    if [[ -n $(git status -s) ]]; then
        # Add all changes
        git add .

        # Commit changes with a default message
        git commit -m "Auto commit"

        # Push changes (optional)
        git push "https://$username:$personal_access_token@github.com/$username/$repository.git"
    fi
done


notify-send "Git Sync complete"
